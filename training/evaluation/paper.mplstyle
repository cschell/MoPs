# default stylesheet for reference: https://matplotlib.org/stable/tutorials/introductory/customizing.html#the-default-matplotlibrc-file
# good reference: https://www.datafantic.com/the-magic-of-matplotlib-stylesheets/

axes.labelsize: 7
axes.linewidth: 1               # Spine edge line width
axes.spines.bottom: True
axes.spines.left: True          # We only want the left and bottom spines
axes.spines.right: False
axes.spines.top: False          # Display axis spines (True or False)
axes.titlesize: 7
axes.grid: true                 # display grid or not
axes.grid.axis: y               # which axis the grid should apply to
axes.axisbelow: True            # Sets axis gridlines below lines and patches.

savefig.dpi:       300
figure.dpi:        300
figure.titlesize:  8

# find out latex width with https://tex.stackexchange.com/a/39385 (use \linewidth)
# Full Width: 7.3
# Single Column: 3.49
figure.figsize: 3.49, 2.5

font.size: 7

grid.linewidth: 0.4
grid.color: A5A5A5              # grid color

legend.fontsize: 7
legend.title_fontsize: 7
legend.framealpha: 1
legend.fancybox: False

lines.linewidth: 4              # line width in points
lines.solid_capstyle: butt      # Makes a square ending of the line stopping at datapoint

pgf.texsystem: pdflatex

xtick.labelsize: 6
xtick.major.width: 0.4
xtick.major.size: 3.5

ytick.labelsize: 6
ytick.major.width: 0.4
ytick.major.size: 3.5

